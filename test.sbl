# factorial
fact {
    # duplicate and compare to zero
    ^ 0 ==
    br {
        .@
        # pop off to nothing, and push a 1
        .@ 1
    }
    el {
        .@
        .x       # pop into x
        x 1 -    # push a copy and subtract 1 from it
        fact     # call factorial
        x *     # multiply whatever our factorial is by x
    }
}

square { ^ * }
cube { ^ ^ * * }

